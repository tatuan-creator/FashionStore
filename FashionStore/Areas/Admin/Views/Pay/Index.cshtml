@model IEnumerable<FashionStore.Models.ThanhToan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <div class="card-header row">
            <div class="col-md-6">
                <h4 class="fw-bold py-3 mb-4">Hình Thức Thanh Toán</h4>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Create", "Pay")" class="btn btn-success text-white"><i class="fa-solid fa-plus"></i> Thêm</a>
            </div>
        </div>
        <div class="table-responsive text-nowrap card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text">Tên Hình Thức Thanh Toán</th>
                        <th class="text-center">Trạng Thái</th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text">@item.TenHT</td>
                            <td class="text-center">@item.TenTT</td>
                            <td class="text-center">
                                <a href="@Url.Action("Update", "Pay", new {id = item.MaHT})" class="btn btn-sm btn-warning text-white"><i class="fa-solid fa-pen-to-square"></i></a>
                            </td>
                            <td>
                                <a data-id="@item.MaHT" class="btn btn-sm btn-danger text-white btn-delete"><i class="fa-solid fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section footer {
    <script>
        $(".btn-delete").on('click', function () {
            let id = $(this).attr("data-id");
            if (confirm("Bạn có chắc chắn muốn xóa hình thức này!")) {
                window.location.href = '/Admin/Pay/Delete?id=' + id;
            }
        })
    </script>
}

