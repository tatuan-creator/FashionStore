@model FashionStore.Models.TaiKhoan
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Update", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.TenTK)
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Tài Khoản</h4>
        <div class="card">
            <div class="card-header row">
                <div class="col-md-6">
                    <h5>Cập nhật tài khoản</h5>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Account")" class="btn btn-primary text-white"><i class="fa-solid fa-rotate-left"></i> Trở về</a>
                    <button type="submit" class="btn btn-success text-white"><i class="fa-solid fa-floppy-disk"></i> Cập nhật</button>
                </div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="TenSP">Tên Đăng Nhập</label>
                    @Html.TextBoxFor(m => m.TenTK, new { @class = "form-control my-2" })
                </div>
                <div class="mb-3">
                    <label for="DonViTinh">Mật Khẩu</label>
                    @Html.TextBoxFor(m => m.MatKhau, new { @class = "form-control my-2" })
                </div>
            </div>
        </div>
    </div>
}