@model IEnumerable<FashionStore.Models.TaiKhoan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Tài Khoản</h4>
    <div class="card">
        <div class="card-header row">
            <div class="col-md-6">
                <h5>Danh sách tài khoản</h5>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Create", "Account")" class="btn btn-success text-white"><i class="fa-solid fa-plus"></i> Thêm</a>
            </div>
        </div>
        <div class="table-responsive text-nowrap card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">Tên Đăng Nhập</th>
                        <th class="text-center">Mật khẩu</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.TenTK</td>
                            <td class="text-center">@item.MatKhau</td>
                            <td class="text-center">
                                <a href="@Url.Action("Update", "Account", new {tentaikhoan = item.TenTK})" class="btn btn-sm btn-warning text-white"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a data-id="@item.TenTK" class="btn btn-sm btn-danger text-white btn-delete"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section footer {
    <script>
        $(".btn-delete").on('click', function () {
            let id = $(this).attr("data-id");
            if (confirm("Bạn có chắc chắn muốn xóa sản phẩm với id: " + id)) {
                window.location.href = '/Admin/Account/Delete?tentaikhoan=' + id;
            }
        })
    </script>
}
