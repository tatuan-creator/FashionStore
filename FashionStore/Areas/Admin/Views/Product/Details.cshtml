@model FashionStore.Models.SanPham
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Chi tiết sản Phẩm</h4>
    <div class="card">
        <div class="card-header row">
            <div class="col-md-6">
                <h5>@Model.TenSP</h5>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index", "Product")" class="btn btn-primary text-white"><i class="fa-solid fa-rotate-left"></i> Trở về</a>
            </div>
        </div>
        <div class="table-responsive text-nowrap card-body">
            <table class="table table-bordered">
                <tr>
                    <th>Hình</th>
                    <td>
                        <img src="~/Content/images/@Model.Hinh" style="width: 100px" />
                    </td>
                </tr>
                <tr>
                    <th>Tên sản phẩm</th>
                    <td>@Model.TenSP</td>
                </tr>
                <tr>
                    <th>Đơn vị tính</th>
                    <td>@Model.DonViTinh</td>
                </tr>
                <tr>
                    <th>Đơn giá</th>
                    <td>@Model.DonGia</td>
                </tr>

                <tr>
                    <th>Nhóm hàng</th>
                    <td>@Model.NhomHang.TenNH</td>

                </tr>
                <tr>
                    <th>Số lượng tồn</th>
                    <td>@Model.SoLuongTon</td>
                </tr>

            </table>
        </div>
    </div>
</div>

