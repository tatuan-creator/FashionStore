@model IEnumerable<FashionStore.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="/Public/assetsCustomer/img/categories/aokhoac.png">
                    </div>
                    <h5 class="text-center"><a href="#" style="color:black">Áo Khoác</a></h5>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="/Public/assetsCustomer/img/categories/non.png">
                    </div>
                    <h5 class="text-center"><a href="#" style="color:black">Nón</a></h5>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="/Public/assetsCustomer/img/categories/giay.png">
                    </div>
                    <h5 class="text-center"><a href="#" style="color:black">Giày</a></h5>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="/Public/assetsCustomer/img/categories/short.png">
                    </div>
                    <h5 class="text-center"><a href="#" style="color:black">Quần Short</a></h5>
                </div>
                <div class="col-lg-3">
                    <div class="categories__item set-bg" data-setbg="/Public/assetsCustomer/img/categories/jogger.png">
                    </div>
                    <h5 class="text-center"><a href="#" style="color:black">Jogger</a></h5>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản phẩm nổi bật</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/Content/images/@item.Hinh">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@item.TenSP</a></h6>
                            <h5>@item.DonGia</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Featured Section End -->
